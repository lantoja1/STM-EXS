<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

        <LinearLayout
                android:id="@+id/header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/header"
                android:layout_alignParentTop="true">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_stem"/>
        </LinearLayout>

        <GridLayout
                android:id="@+id/dashboard"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header"
                android:background="@android:color/holo_red_light"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_alignParentEnd="true">

                <Button
                        style="@style/DashboardButton"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="25dp"
                        android:padding="25dp"

                        android:id="@+id/dashboard_button1"
                        android:text="button1"
                        />

                <Button
                        style="@style/DashboardButton"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:textSize="25dp"
                        android:padding="25dp"

                        android:text="button2"
                        />

                <Button
                        style="@style/DashboardButton"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textSize="25dp"
                        android:padding="25dp"

                        android:text="button3"
                        />

                <Button
                        style="@style/DashboardButton"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:textSize="25dp"
                        android:padding="25dp"

                        android:text="button4"
                        />
        </GridLayout>

        <com.shamanland.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/header"
                android:layout_marginBottom="@dimen/floating_action_button_margin_normal_minus"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/floating_action_button_margin_normal"
                android:text="@string/action_start"
                app:floatingActionButtonColor="@drawable/action_start"
                app:floatingActionButtonSize="normal"
                >
        </com.shamanland.fab.FloatingActionButton>
</RelativeLayout>
